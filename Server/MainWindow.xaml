<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Background="Aqua"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start Client" Click="OnStartClientClicked" HorizontalAlignment="Left" Margin="468,30,0,0" VerticalAlignment="Top" Height="44" Width="132"/>
        <TextBlock x:Name="logs" HorizontalAlignment="Center" Background="WhiteSmoke" TextWrapping="Wrap" VerticalAlignment="Center" Height="244" Width="400"/>
        <Button Content="Start Server" Click="OnStartServerClicked" HorizontalAlignment="Left" Margin="200,30,0,0" VerticalAlignment="Top" Height="44" Width="132"/>

    </Grid>
</Window>
